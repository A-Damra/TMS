@model IEnumerable<TMS.Models.Assignment>

@{
    ViewData["Title"] = "Assignment List";
}

<h2>Assignment List</h2>

<a asp-action="CreateAssignment" class="btn btn-primary mb-3">Create New Assignment</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var assignment in Model)
        {
            <tr>
                <td>@assignment.Name</td>
                <td>@assignment.Description</td>
                <td>
                    <a asp-action="EditAssignment" asp-route-id="@assignment.AssignmentId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="DeleteAssignment" asp-route-id="@assignment.AssignmentId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
